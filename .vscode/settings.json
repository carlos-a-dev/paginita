{
  "conventionalCommits.scopes": [
    "backend",
    "frontend",
    "docs",
    "chore",
    "ci",
    "test",
    "style",
    "refactor",
    "build"
  ],
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "eslint.useFlatConfig": true
}
